{
  final NodeEngine nodeEngine=getNodeEngine();
  AwaitOperation op=new AwaitOperation(name,getTimeInMillis(timeout,unit));
  Future<Boolean> f=nodeEngine.getOperationService().invokeOnPartition(CountDownLatchService.SERVICE_NAME,op,partitionId);
  try {
    return f.get();
  }
 catch (  ExecutionException e) {
    throw ExceptionUtil.rethrowAllowInterrupted(e);
  }
}
