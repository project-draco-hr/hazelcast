{
  if (description.getAnnotation(RequiresUnalignedMemoryAccessSupport.class) != null && !MemoryAccessorProvider.isUnalignedAccessAllowed()) {
    return new Statement(){
      @Override public void evaluate() throws Throwable {
        LOGGER.finest("Ignoring `" + description.getClassName() + "` because unaligned memory access is not supported in this platform");
      }
    }
;
  }
  return base;
}
