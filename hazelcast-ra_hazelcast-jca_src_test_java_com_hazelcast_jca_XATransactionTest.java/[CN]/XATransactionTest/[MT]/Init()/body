{
  if (!isDbInit) {
    isDbInit=true;
    Connection con=h2Datasource.getConnection();
    Statement stmt=null;
    try {
      stmt=con.createStatement();
      stmt.execute("create table TEST (A varchar(3))");
    }
  finally {
      if (stmt != null) {
        stmt.close();
      }
      con.close();
    }
  }
}
