{
  final ISemaphore semaphore=hz.getSemaphore("testRelease_whenBlockedAcquireThread");
  semaphore.init(0);
  new Thread(){
    @Override public void run(){
      try {
        semaphore.acquire();
      }
 catch (      InterruptedException e) {
        e.printStackTrace();
      }
    }
  }
.start();
  semaphore.release();
  assertEquals(0,semaphore.availablePermits());
}
