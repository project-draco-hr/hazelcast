{
  int size=futures != null ? futures.size() : 0;
  while (size > 0) {
    for (    Future f : futures) {
      if (!f.isDone()) {
        try {
          f.get(1,TimeUnit.MILLISECONDS);
        }
 catch (        Exception e) {
          e.printStackTrace();
        }
        if (f.isDone()) {
          size--;
        }
      }
    }
  }
}
