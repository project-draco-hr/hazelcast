{
  int partitionId=nodeEngine.getPartitionService().getPartitionId(partitionKey);
  LockOperation operation=new LockOperation(namespace,key,ThreadUtil.getThreadId(),getTimeInMillis(timeout,timeunit));
  try {
    Invocation invocation=nodeEngine.getOperationService().createInvocationBuilder(SERVICE_NAME,operation,partitionId).build();
    Future future=invocation.invoke();
    return (Boolean)future.get();
  }
 catch (  Throwable t) {
    throw ExceptionUtil.rethrowAllowInterrupted(t);
  }
}
