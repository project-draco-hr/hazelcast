{
  final ILock lock=callerInstance.getLock(newName());
  final ICondition condition=lock.newCondition(newName());
  final CountDownLatch latch=new CountDownLatch(1);
  new TestThread(){
    @Override public void doRun(){
      lock.lock();
      latch.countDown();
    }
  }
.start();
  latch.await();
  condition.await();
}
