{
  if (!ensureValidConfiguration(joinMessage)) {
    return;
  }
  if (node.getMasterAddress() != null) {
    if (!checkIfJoinRequestFromAnExistingMember(joinMessage,connection)) {
      sendMasterAnswer(joinMessage.getAddress());
    }
  }
 else {
    if (logger.isFinestEnabled()) {
      logger.finest(format("Received a master question from %s," + " but this node is not master itself or doesn't have a master yet!",joinMessage.getAddress()));
    }
  }
}
