{
  if (totalInvocations == 1) {
    logger.warning(format("Slow operation detected: %s%n%s",operation,log.stackTrace));
    return;
  }
  logger.warning(format("Slow operation detected: %s (%d invocations)%n%s",operation,totalInvocations,(totalInvocations % FULL_LOG_FREQUENCY == 0) ? log.stackTrace : log.shortStackTrace));
}
