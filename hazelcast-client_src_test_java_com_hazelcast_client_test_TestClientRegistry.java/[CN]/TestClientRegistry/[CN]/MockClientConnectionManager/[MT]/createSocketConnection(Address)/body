{
  if (!alive) {
    throw new HazelcastException("ConnectionManager is not active!!!");
  }
  try {
    HazelcastInstance instance=nodeRegistry.getInstance(address);
    if (instance == null) {
      throw new IOException("Can not connected to " + address + ": instance does not exist");
    }
    Node node=TestUtil.getNode(instance);
    return new MockedClientConnection(client,connectionIdGen.incrementAndGet(),node.nodeEngine,address,clientAddress,stateMap);
  }
 catch (  Exception e) {
    throw ExceptionUtil.rethrow(e,IOException.class);
  }
}
