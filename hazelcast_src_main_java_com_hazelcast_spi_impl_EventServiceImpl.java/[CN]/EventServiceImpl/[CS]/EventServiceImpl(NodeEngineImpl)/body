{
  this.nodeEngine=nodeEngine;
  logger=nodeEngine.getLogger(EventService.class.getName());
  final Node node=nodeEngine.getNode();
  eventExecutorService=Executors.newSingleThreadExecutor(new SingleExecutorThreadFactory(node.threadGroup,node.getConfigClassLoader(),node.getThreadNamePrefix("event")));
  segments=new ConcurrentHashMap<String,EventServiceSegment>();
}
