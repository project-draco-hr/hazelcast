{
  this.nodeEngine=nodeEngine;
  logger=nodeEngine.getLogger(EventService.class.getName());
  Node node=nodeEngine.getNode();
  eventExecutorService=Executors.newSingleThreadExecutor(new ExecutorThreadFactory(node.threadGroup,node.hazelcastInstance,node.getThreadNamePrefix("event"),node.getConfig().getClassLoader()));
  segments=new ConcurrentHashMap<String,EventServiceSegment>();
  serializationContext=this.nodeEngine.getSerializationContext();
}
