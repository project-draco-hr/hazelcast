{
  final EventServiceSegment segment=getSegment(serviceName,false);
  if (segment != null) {
    final Collection<Registration> registrations=segment.getRegistrations(topic,false);
    return registrations != null && !registrations.isEmpty() ? Collections.<EventRegistration>unmodifiableCollection(registrations) : Collections.<EventRegistration>emptySet();
  }
  return Collections.emptySet();
}
