{
  while (!getPartitions() && client.getConnectionManager().isAlive()) {
    if (isClusterFormedByOnlyLiteMembers()) {
      throw new PartitionsCantBeAssignedException();
    }
    try {
      Thread.sleep(PARTITION_WAIT_TIME);
    }
 catch (    InterruptedException e) {
      e.printStackTrace();
    }
  }
}
