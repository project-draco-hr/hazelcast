{
  try {
    Thread.sleep(3000);
  }
 catch (  InterruptedException e) {
    e.printStackTrace();
  }
  while (true) {
    final Node node=TestUtil.getNode(instance);
    if (node == null || !node.isActive()) {
      break;
    }
