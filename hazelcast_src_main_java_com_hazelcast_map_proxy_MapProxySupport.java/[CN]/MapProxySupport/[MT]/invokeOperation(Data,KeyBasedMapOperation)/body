{
  final NodeEngine nodeEngine=getNodeEngine();
  int partitionId=nodeEngine.getPartitionService().getPartitionId(key);
  operation.setThreadId(ThreadContext.getThreadId());
  try {
    Invocation invocation=nodeEngine.getOperationService().createInvocationBuilder(SERVICE_NAME,operation,partitionId).build();
    Future f;
    Object o;
    if (mapConfig.isStatisticsEnabled()) {
      long time=System.currentTimeMillis();
      f=invocation.invoke();
      o=f.get();
      if (operation instanceof BasePutOperation)       localMapStats.incrementPuts(System.currentTimeMillis() - time);
 else       if (operation instanceof BaseRemoveOperation)       localMapStats.incrementRemoves(System.currentTimeMillis() - time);
 else       if (operation instanceof GetOperation)       localMapStats.incrementGets(System.currentTimeMillis() - time);
    }
 else {
      f=invocation.invoke();
      o=f.get();
    }
    return o;
  }
 catch (  Throwable t) {
    throw ExceptionUtil.rethrow(t);
  }
}
