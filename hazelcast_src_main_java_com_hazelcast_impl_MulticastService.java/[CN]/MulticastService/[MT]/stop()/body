{
  try {
    final CountDownLatch l=new CountDownLatch(1);
    queue.put(new Runnable(){
      public void run(){
        running=false;
        datagramPacketReceive.setData(new byte[0]);
        datagramPacketSend.setData(new byte[0]);
        l.countDown();
      }
    }
);
    l.await();
  }
 catch (  InterruptedException ignored) {
  }
}
