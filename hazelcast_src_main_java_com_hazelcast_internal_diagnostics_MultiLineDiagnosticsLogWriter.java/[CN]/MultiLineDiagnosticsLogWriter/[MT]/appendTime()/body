{
  int hour=calendar.get(HOUR);
  if (hour < 10) {
    sb.append('0');
  }
  sb.append(hour);
  sb.append(':');
  int minute=calendar.get(MINUTE);
  if (minute < 10) {
    sb.append('0');
  }
  sb.append(minute);
  sb.append(':');
  int second=calendar.get(SECOND);
  if (second < 10) {
    sb.append('0');
  }
  sb.append(second);
}
