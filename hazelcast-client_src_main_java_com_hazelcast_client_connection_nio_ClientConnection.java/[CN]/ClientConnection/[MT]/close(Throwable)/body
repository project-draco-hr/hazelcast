{
  if (!live) {
    return;
  }
  try {
    close0();
  }
 catch (  Exception e) {
    logger.warning(e);
  }
  String message="Connection [" + socketChannel.socket().getRemoteSocketAddress() + "] lost. Reason: ";
  if (t != null) {
    message+=t.getClass().getName() + "[" + t.getMessage()+ "]";
  }
 else {
    message+="Socket explicitly closed";
  }
  logger.info(message);
  connectionManager.destroyConnection(this);
}
