{
  final Collection<ManagedService> managedServices=getServices(ManagedService.class,false);
  services.clear();
  for (  ManagedService service : managedServices) {
    try {
      service.destroy();
    }
 catch (    Throwable t) {
      getLogger().log(Level.SEVERE,"Error while stopping service: " + t.getMessage(),t);
    }
  }
}
