{
  lastHandle=Clock.currentTimeMillis();
  if (!connection.isAlive()) {
    return;
  }
  if (lastWritable == null) {
    lastWritable=poll();
  }
  if (lastWritable == null && buffer.position() == 0) {
    ready=true;
    return;
  }
  try {
    writeBuffer();
  }
 catch (  Throwable t) {
    logger.severe("Fatal Error at WriteHandler for endPoint: " + connection.getEndPoint(),t);
  }
 finally {
    ready=false;
    registerWrite();
  }
}
