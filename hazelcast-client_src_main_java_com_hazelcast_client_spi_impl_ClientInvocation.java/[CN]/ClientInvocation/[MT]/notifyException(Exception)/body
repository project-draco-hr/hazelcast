{
  if (isRetryable(exception)) {
    if (handleRetry()) {
      return;
    }
  }
  if (exception instanceof RetryableHazelcastException) {
    if (request instanceof RetryableRequest || invocationService.isRedoOperation()) {
      if (handleRetry()) {
        return;
      }
    }
  }
  clientInvocationFuture.setResponse(exception);
}
