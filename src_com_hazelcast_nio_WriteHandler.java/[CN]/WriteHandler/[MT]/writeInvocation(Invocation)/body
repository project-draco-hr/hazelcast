{
  try {
    if (!connection.live()) {
      ClusterService.get().rollbackInvocation(inv);
      return;
    }
    inv.write();
    writeHandlerQueue.put(inv);
  }
 catch (  InterruptedException e) {
    Node.get().handleInterruptedException(Thread.currentThread(),e);
  }
  signalWriteRequest();
}
