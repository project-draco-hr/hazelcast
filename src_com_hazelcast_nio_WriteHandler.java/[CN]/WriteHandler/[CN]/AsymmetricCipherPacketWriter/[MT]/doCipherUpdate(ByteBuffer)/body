{
  while (src.hasRemaining()) {
    int remaining=src.remaining();
    if (remaining > 100) {
      int oldLimit=src.limit();
      src.limit(src.position() + 100);
      int outputAppendSize=cipher.doFinal(src,cipherBuffer);
      src.limit(oldLimit);
    }
 else {
      int outputAppendSize=cipher.doFinal(src,cipherBuffer);
    }
  }
}
