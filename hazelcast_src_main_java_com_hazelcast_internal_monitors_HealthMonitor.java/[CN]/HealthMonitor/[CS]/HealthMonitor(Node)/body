{
  this.node=node;
  this.logger=node.getLogger(HealthMonitor.class);
  this.metricRegistry=node.nodeEngine.getMetricsRegistry();
  this.monitorLevel=getHealthMonitorLevel();
  this.thresholdPercentageMemory=node.getGroupProperties().getInteger(GroupProperty.HEALTH_MONITORING_THRESHOLD_PERCENTAGE_MEMORY);
  this.thresholdPercentageCPU=node.getGroupProperties().getInteger(GroupProperty.HEALTH_MONITORING_THRESHOLD_PERCENTAGE_CPU);
  this.monitorThread=initMonitorThread();
  this.healthMetrics=new HealthMetrics();
}
