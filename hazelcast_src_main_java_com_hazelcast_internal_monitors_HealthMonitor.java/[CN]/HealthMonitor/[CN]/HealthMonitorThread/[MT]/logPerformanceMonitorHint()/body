{
  if (!performanceLogHint) {
    return;
  }
  performanceLogHint=false;
  logger.info("The HealthMonitor has detected a high load on the system. For more detailed information, " + getLineSeperator() + "enable the PerformanceMonitor by adding -D"+ GroupProperties.PROP_PERFORMANCE_MONITOR_ENABLED+ "=true");
}
