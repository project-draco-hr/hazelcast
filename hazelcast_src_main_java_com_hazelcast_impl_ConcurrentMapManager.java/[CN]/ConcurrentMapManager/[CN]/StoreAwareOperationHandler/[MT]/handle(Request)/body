{
  if (shouldSchedule(request)) {
    if (request.hasEnoughTimeToSchedule()) {
      schedule(request);
    }
 else {
      onNoTimeToSchedule(request);
    }
    return;
  }
  if (shouldExecuteAsync(request)) {
    executeAsync(request);
    return;
  }
  doOperation(request);
  returnResponse(request);
}
