{
  if (clazz.isAssignableFrom(Date.class))   return true;
 else   if (clazz.isAssignableFrom(Number.class))   return true;
 else   if (clazz.isAssignableFrom(String.class))   return true;
 else   if (clazz.isAssignableFrom(ObjectId.class))   return true;
 else   if (clazz.isAssignableFrom(BSONObject.class))   return true;
 else   if (clazz.isAssignableFrom(Boolean.class))   return true;
 else   if (clazz.isAssignableFrom(Double.class))   return true;
 else   if (clazz.isAssignableFrom(Integer.class))   return true;
 else   if (clazz.isAssignableFrom(Long.class))   return true;
 else   if (clazz.isAssignableFrom(Pattern.class))   return true;
 else   if (clazz.isAssignableFrom(UUID.class))   return true;
  return false;
}
