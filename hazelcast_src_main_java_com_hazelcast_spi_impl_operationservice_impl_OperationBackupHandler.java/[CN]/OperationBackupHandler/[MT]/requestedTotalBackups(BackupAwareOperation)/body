{
  int backups=op.getSyncBackupCount() + op.getAsyncBackupCount();
  if (backups > MAX_BACKUP_COUNT) {
    throw new IllegalArgumentException("Can't create backup for Operation:" + op + ", the sum of async and sync backups is larger than "+ MAX_BACKUP_COUNT+ ", sync backup count is "+ op.getSyncBackupCount()+ ", async backup count is "+ op.getAsyncBackupCount());
  }
  return backups;
}
