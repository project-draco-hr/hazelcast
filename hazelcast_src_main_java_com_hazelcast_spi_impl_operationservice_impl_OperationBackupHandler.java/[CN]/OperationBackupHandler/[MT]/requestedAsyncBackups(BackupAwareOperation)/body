{
  int backups=op.getAsyncBackupCount();
  if (backups < 0) {
    throw new IllegalArgumentException("Can't create backup for Operation:" + op + ", async backup count can't be smaller than 0, but found: "+ backups);
  }
  if (backups > MAX_BACKUP_COUNT) {
    throw new IllegalArgumentException("Can't create backup for Operation:" + op + ", async backup count can't be larger than "+ MAX_BACKUP_COUNT+ ", but found: "+ backups);
  }
  return backups;
}
