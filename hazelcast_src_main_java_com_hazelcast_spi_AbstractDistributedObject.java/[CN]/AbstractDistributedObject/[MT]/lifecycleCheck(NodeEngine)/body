{
  if (engine == null) {
    throw new HazelcastInstanceNotActiveException();
  }
  while (engine.isActive() && engine.getHazelcastInstance().getLifecycleService().isPaused()) {
    try {
      Thread.sleep(100);
    }
 catch (    InterruptedException ignored) {
      return;
    }
  }
  if (!engine.isActive()) {
    throw new HazelcastInstanceNotActiveException();
  }
}
