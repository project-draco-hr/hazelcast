{
  Record rec=null;
  while (rec == null && recordId <= maxId) {
    rec=getRecordById(recordId);
    if (rec != null) {
      if (rec.valueCount() > 0) {
        if (name != null && name.equals(rec.name)) {
          if (rec.blockId == blockId) {
            if (rec.owner.equals(thisAddress)) {
              return rec;
            }
          }
        }
      }
    }
    rec=null;
    recordId++;
  }
  return rec;
}
