{
  Timer timer=(Timer)session.getServletContext().getAttribute("timer");
  if (timer == null) {
synchronized (lock) {
      timer=(Timer)session.getServletContext().getAttribute("timer");
      if (timer == null) {
        timer=new Timer();
        session.getServletContext().setAttribute("timer",timer);
      }
    }
  }
  return timer;
}
