{
  final ClassPathXmlApplicationContext context=new ClassPathXmlApplicationContext("classpath:/com/hazelcast/spring/node-client-applicationContext-hazelcast.xml");
  final HazelcastInstance instance=(HazelcastInstance)context.getBean("instance");
  assertNotNull(instance);
  final HazelcastInstance client=(HazelcastInstance)context.getBean("client");
  assertNotNull(client);
  context.destroy();
}
