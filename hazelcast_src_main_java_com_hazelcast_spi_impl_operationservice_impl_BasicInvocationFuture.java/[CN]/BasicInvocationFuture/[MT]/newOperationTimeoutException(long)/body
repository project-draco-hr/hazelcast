{
  boolean hasResponse=invocation.pendingResponse != null;
  int backupsExpected=invocation.backupsExpected;
  int backupsCompleted=invocation.backupsCompleted;
  if (hasResponse) {
    return new OperationTimeoutException("No response for " + totalTimeoutMs + " ms."+ " Aborting invocation! "+ toString()+ " Not all backups have completed! "+ " backups-expected:"+ backupsExpected+ " backups-completed: "+ backupsCompleted);
  }
 else {
    return new OperationTimeoutException("No response for " + totalTimeoutMs + " ms."+ " Aborting invocation! "+ toString()+ " No response has been received! "+ " backups-expected:"+ backupsExpected+ " backups-completed: "+ backupsCompleted);
  }
}
