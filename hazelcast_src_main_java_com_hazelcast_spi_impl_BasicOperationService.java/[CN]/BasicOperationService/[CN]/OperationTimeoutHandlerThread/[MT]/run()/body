{
  try {
    while (!shutdown) {
      scan();
      try {
        Thread.sleep(DELAY_MILLIS);
      }
 catch (      InterruptedException ignore) {
        EmptyStatement.ignore(ignore);
      }
    }
  }
 catch (  Throwable t) {
    inspectOutputMemoryError(t);
    logger.severe("Failed to run",t);
  }
}
