{
  for (int i=0; i < ops.length; i++) {
    Operation op=ops[i];
    if (op == null) {
      throw new NullPointerException();
    }
    if (op instanceof PartitionAwareOperation) {
      throw new IllegalArgumentException("Post join operation can not be a PartitionAwareOperation!");
    }
  }
  operations=ops;
}
