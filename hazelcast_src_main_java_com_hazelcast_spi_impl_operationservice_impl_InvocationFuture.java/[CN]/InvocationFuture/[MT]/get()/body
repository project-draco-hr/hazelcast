{
  if (response != VOID) {
    return resolveAndThrow(response);
  }
  boolean threadInterrupted=false;
  try {
synchronized (this) {
      while (response == VOID) {
        try {
          wait();
        }
 catch (        InterruptedException e) {
          threadInterrupted=true;
          interrupted=true;
        }
      }
    }
    return resolveAndThrow(response);
  }
  finally {
    restoreInterrupt(threadInterrupted);
  }
}
