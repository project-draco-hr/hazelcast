{
  int size=futures != null ? futures.size() : 0;
  while (size > 0) {
    for (    Future f : futures) {
      if (!f.isDone()) {
        try {
          f.get(1,TimeUnit.SECONDS);
        }
 catch (        InterruptedException ignored) {
        }
catch (        TimeoutException ignored) {
        }
        if (f.isDone()) {
          size--;
        }
      }
    }
  }
}
