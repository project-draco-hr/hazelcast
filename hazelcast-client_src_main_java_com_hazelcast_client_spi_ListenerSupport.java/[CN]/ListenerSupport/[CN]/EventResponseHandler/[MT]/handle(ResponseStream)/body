{
  try {
    stream.read();
    lastStream=stream;
    latch.countDown();
    while (active && !Thread.currentThread().isInterrupted()) {
      final Object event=stream.read();
      handler.handle(event);
    }
  }
 catch (  Exception e) {
    try {
      stream.end();
    }
 catch (    IOException ignored) {
    }
    if (ErrorHandler.isRetryable(e)) {
      throw e;
    }
 else {
      active=false;
    }
  }
}
