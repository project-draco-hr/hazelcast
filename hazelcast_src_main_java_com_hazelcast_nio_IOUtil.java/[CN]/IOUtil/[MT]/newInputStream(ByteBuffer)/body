{
  return new InputStream(){
    public int read() throws IOException {
      if (!buf.hasRemaining()) {
        return -1;
      }
      return buf.get();
    }
    public int read(    byte[] bytes,    int off,    int len) throws IOException {
      len=Math.min(len,buf.remaining());
      buf.get(bytes,off,len);
      return len;
    }
  }
;
}
