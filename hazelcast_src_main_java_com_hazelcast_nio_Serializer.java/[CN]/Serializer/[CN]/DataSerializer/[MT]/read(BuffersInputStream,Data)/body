{
  String className=bbis.readUTF();
  DataSerializable ds=null;
  try {
    ds=(DataSerializable)Class.forName(className).newInstance();
    ds.readData(bbis);
  }
 catch (  Exception e) {
    throw new IOException("Problem reading DataSerializable class : " + className + ", exception: "+ e);
  }
  return ds;
}
