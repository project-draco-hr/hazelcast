{
  int indexThis=-1;
  int indexTarget=-1;
  int index=0;
  for (  MemberImpl member : lsMembers) {
    if (member.getAddress().equals(thisAddress)) {
      indexThis=index;
    }
 else     if (member.getAddress().equals(target)) {
      indexTarget=index;
    }
    if (indexThis > -1 && indexTarget > -1) {
      int distance=indexThis - indexTarget;
      if (distance < 0) {
        distance+=lsMembers.size();
      }
      return distance;
    }
    index++;
  }
  return 0;
}
