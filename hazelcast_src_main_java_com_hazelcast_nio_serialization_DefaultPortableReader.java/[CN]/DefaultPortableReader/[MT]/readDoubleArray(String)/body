{
  final int currentPos=in.position();
  try {
    int pos=getPosition(fieldName);
    in.position(pos);
    final int len=in.readInt();
    final double[] values=new double[len];
    for (int i=0; i < len; i++) {
      values[i]=in.readDouble();
    }
    return values;
  }
  finally {
    in.position(currentPos);
  }
}
