{
  Operation op=new HasOngoingMigration();
  Future f=nodeEngine.getOperationService().createInvocationBuilder(SERVICE_NAME,op,node.getMasterAddress()).setTryCount(100).setTryPauseMillis(100).invoke();
  try {
    return (Boolean)f.get(1,TimeUnit.MINUTES);
  }
 catch (  InterruptedException ignored) {
  }
catch (  Exception e) {
    logger.log(level,"Could not get a response from master about migrations! -> " + e.toString());
  }
  return false;
}
