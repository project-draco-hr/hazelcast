{
  final Node child=node.getFirstChild();
  if (child != null) {
    final Node next=child.getNextSibling();
    if (next == null) {
      return hasTextContent(child) ? child.getNodeValue() : "";
    }
    final StringBuffer buf=new StringBuffer();
    getTextContent2(node,buf);
    return buf.toString();
  }
  return "";
}
