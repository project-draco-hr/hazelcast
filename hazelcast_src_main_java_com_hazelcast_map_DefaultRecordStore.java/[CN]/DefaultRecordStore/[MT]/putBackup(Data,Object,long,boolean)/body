{
  Record record=records.get(key);
  if (record == null) {
    record=mapService.createRecord(name,key,value,ttl,shouldSchedule);
    records.put(key,record);
    updateSizeEstimator(calculateRecordSize(record));
  }
 else {
    updateSizeEstimator(-calculateRecordSize(record));
    setRecordValue(record,value);
    updateSizeEstimator(calculateRecordSize(record));
  }
  return record;
}
