{
  try {
    while (isActive) {
      log.finest("Starting IOBalancer thread");
      checkReadHandlers();
      checkWriteHandlers();
      TimeUnit.SECONDS.sleep(migrationIntervalSeconds);
    }
  }
 catch (  InterruptedException e) {
    log.finest("IOBalancer thread stopped");
    EmptyStatement.ignore(e);
  }
}
