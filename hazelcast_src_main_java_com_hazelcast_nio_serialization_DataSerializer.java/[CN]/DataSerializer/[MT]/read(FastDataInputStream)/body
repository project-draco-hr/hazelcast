{
  final String className=in.readUTF();
  try {
    DataSerializable ds;
    DataSerializableFactory dsf=DataSerializerRegistrar.getFactory(className);
    if (dsf != null) {
      ds=dsf.create();
    }
 else {
      ds=(DataSerializable)newInstance(className);
    }
    ds.readData(in);
    return ds;
  }
 catch (  final Exception e) {
    throw new HazelcastSerializationException("Problem while reading DataSerializable class : " + className + ", exception: "+ e.getMessage(),e);
  }
}
