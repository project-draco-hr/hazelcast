{
  ConnectionMonitor monitor=mapMonitors.get(endpoint);
  if (monitor == null) {
    monitor=new ConnectionMonitor(this,endpoint);
    final ConnectionMonitor monitorOld=mapMonitors.putIfAbsent(endpoint,monitor);
    if (monitorOld != null) {
      monitor=monitorOld;
    }
  }
  if (reset) {
    monitor.reset();
  }
  return monitor;
}
