{
  if (!node.joined()) {
    return false;
  }
  if (!node.isMaster()) {
    return false;
  }
  if (node.getState() != NodeState.ACTIVE) {
    return false;
  }
  final ClusterJoinManager clusterJoinManager=node.clusterService.getClusterJoinManager();
  if (clusterJoinManager.isJoinInProgress()) {
    return false;
  }
  return true;
}
