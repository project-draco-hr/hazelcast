{
  Callable<Boolean> callable=new Callable<Boolean>(){
    public Boolean call(){
synchronized (lifecycleLock) {
        if (paused.get()) {
          fireLifecycleEvent(PAUSING);
        }
 else {
          return false;
        }
        paused.set(false);
        fireLifecycleEvent(PAUSED);
        return true;
      }
    }
  }
;
  return hazelcastClient.callAsyncAndWait(callable);
}
