{
synchronized (lifecycleLock) {
    if (!paused.get()) {
      fireLifecycleEvent(new LifecycleEvent(LifecycleEvent.LifecycleState.PAUSING));
    }
 else {
      return false;
    }
    paused.set(true);
    fireLifecycleEvent(new LifecycleEvent(LifecycleEvent.LifecycleState.PAUSED));
    return true;
  }
}
