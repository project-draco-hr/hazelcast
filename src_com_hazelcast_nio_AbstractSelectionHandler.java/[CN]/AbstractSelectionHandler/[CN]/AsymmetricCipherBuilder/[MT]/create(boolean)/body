{
  try {
    Cipher cipher=Cipher.getInstance(algorithm);
    if (encryptMode) {
      cipher.init(Cipher.ENCRYPT_MODE,keyPair.getPublic());
    }
 else {
      cipher.init(Cipher.DECRYPT_MODE,keyPair.getPrivate());
    }
    return cipher;
  }
 catch (  Exception e) {
    e.printStackTrace();
    System.exit(0);
  }
  return null;
}
