{
  if (connection.getEndPoint().equals(ownerConnectionAddress)) {
    ClientConnection clientConnection=(ClientConnection)connection;
    Exception ex=new TargetDisconnectedException(format("Disconnecting from member %s due to heartbeat problems. Current time: %s. Last heartbeat: %s",clientConnection.getRemoteEndpoint(),timeToString(System.currentTimeMillis()),timeToString(clientConnection.getLastHeartbeatMillis())),clientConnection.getCloseCause());
    connectionManager.destroyConnection(connection,ex);
  }
}
