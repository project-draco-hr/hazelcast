{
synchronized (monitor) {
    if (running) {
      this.running=false;
      try {
        Connection connection=client.connectionManager.getConnection();
        if (connection != null) {
          connection.close();
        }
      }
 catch (      IOException ignored) {
      }
      try {
        monitor.wait();
      }
 catch (      InterruptedException ignored) {
      }
    }
  }
}
