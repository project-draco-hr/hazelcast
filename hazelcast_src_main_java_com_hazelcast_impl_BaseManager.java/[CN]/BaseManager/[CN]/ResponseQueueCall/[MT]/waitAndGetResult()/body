{
  while (true) {
    try {
      Object obj=responses.poll(10,TimeUnit.SECONDS);
      if (obj != null) {
        return obj;
      }
      if (node.isActive()) {
        logger.log(Level.FINEST,"Still no response! " + request);
      }
      node.checkNodeState();
      if (Thread.interrupted()) {
        handleInterruptedException();
      }
    }
 catch (    InterruptedException e) {
      handleInterruptedException();
    }
  }
}
