{
  for (; ; ) {
    Object result=waitAndGetResult();
    if (Thread.interrupted()) {
      handleInterruption();
    }
    if (result == OBJECT_REDO) {
      request.redoCount++;
      logRedo(request,redoType,true);
      if (request.redoCount > redoGiveUpThreshold) {
        throw new OperationTimeoutException(request.operation.toString(),"Redo threshold exceeded!" + " Last redo cause: " + redoType + ", Name: "+ request.name);
      }
      try {
        Thread.sleep(redoWaitMillis);
      }
 catch (      InterruptedException e) {
        handleInterruption();
      }
      beforeRedo();
      doOp();
      continue;
    }
    return result;
  }
}
