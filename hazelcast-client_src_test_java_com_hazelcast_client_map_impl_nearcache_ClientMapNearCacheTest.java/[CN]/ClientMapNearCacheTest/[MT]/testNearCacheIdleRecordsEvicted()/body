{
  IMap<Integer,Integer> map=getNearCachedMapFromClient(newMaxIdleSecondsNearCacheConfig());
  int size=147;
  populateNearCache(map,size);
  for (int i=0; i < size; i++) {
    map.get(i);
  }
  NearCacheStats stats=map.getLocalMapStats().getNearCacheStats();
  long hitsBeforeIdleExpire=stats.getHits();
  long missesBeforeIdleExpire=stats.getMisses();
  sleepSeconds(MAX_IDLE_SECONDS + 1);
  for (int i=0; i < size; i++) {
    map.get(i);
  }
  stats=map.getLocalMapStats().getNearCacheStats();
  assertEquals("as the hits are not equal, the entries were not cleared from Near Cache after MAX_IDLE_SECONDS",hitsBeforeIdleExpire,stats.getHits());
  assertNotEquals("as the misses are equal, the entries were not cleared from Near Cache after MAX_IDLE_SECONDS",missesBeforeIdleExpire,stats.getMisses());
}
