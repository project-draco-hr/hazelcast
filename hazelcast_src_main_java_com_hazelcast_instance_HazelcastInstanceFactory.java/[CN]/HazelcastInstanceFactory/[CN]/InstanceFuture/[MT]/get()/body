        restoreInterrupt=true;
      }
    }
  }
  if (restoreInterrupt) {
    Thread.currentThread().interrupt();
  }
  if (hz != null) {
    return hz;
  }
  if (throwable != null) {
    instanceMap.remove(name,this);
  }
  throw new IllegalStateException(throwable);
}
