{
  if (hz != null) {
    return hz;
  }
  boolean restoreInterrupt=false;
synchronized (this) {
    while (hz == null) {
      try {
        wait();
      }
 catch (      InterruptedException ignore) {
        restoreInterrupt=true;
      }
    }
  }
  if (restoreInterrupt) {
    Thread.currentThread().interrupt();
  }
  return hz;
}
