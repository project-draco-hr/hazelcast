{
  final IMap<Object,Object> map=client.getMap("map");
  for (int i=0; i < 1000; i++) {
    map.putAsync(i,i);
  }
  assertTrueEventually(new Runnable(){
    public void run(){
      assertEquals(1000,map.size());
    }
  }
);
  for (int i=0; i < 1000; i++) {
    Future f=map.getAsync(i);
    assertEquals(i,f.get());
  }
  for (int i=0; i < 1000; i++) {
    map.removeAsync(i);
  }
  assertTrueEventually(new Runnable(){
    public void run(){
      assertEquals(0,map.size());
    }
  }
);
}
