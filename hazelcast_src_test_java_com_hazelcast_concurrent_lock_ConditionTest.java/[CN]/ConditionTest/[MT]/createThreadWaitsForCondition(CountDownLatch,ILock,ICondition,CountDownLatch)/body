{
  Thread t=new Thread(new Runnable(){
    public void run(){
      try {
        lock.lock();
        syncLatch.countDown();
        condition.await();
        latch.countDown();
      }
 catch (      InterruptedException e) {
        e.printStackTrace();
      }
 finally {
        lock.unlock();
      }
    }
  }
);
  return t;
}
