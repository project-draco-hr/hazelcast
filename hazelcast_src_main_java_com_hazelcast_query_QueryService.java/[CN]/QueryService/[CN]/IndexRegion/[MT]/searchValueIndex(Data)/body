{
  Set<Record> lsRecords=mapValueIndex.get(value.hashCode());
  if (lsRecords == null || lsRecords.size() == 0) {
    return false;
  }
 else {
    for (    Record rec : lsRecords) {
      if (rec.isValid()) {
        if (value.equals(rec.getValue())) {
          return true;
        }
      }
    }
  }
  return false;
}
