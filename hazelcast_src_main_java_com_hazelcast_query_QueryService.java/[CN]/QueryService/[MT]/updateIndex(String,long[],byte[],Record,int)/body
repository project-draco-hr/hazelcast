{
  try {
    queryQ.put(new Runnable(){
      public void run(){
        try {
          IndexRegion indexRegion=getIndexRegion(name);
          indexRegion.doUpdateIndex(newValues,types,record,valueHash);
        }
 catch (        Exception e) {
          e.printStackTrace();
          logger.log(Level.SEVERE,"Indexing error." + e);
        }
      }
    }
);
  }
 catch (  InterruptedException ignore) {
  }
}
