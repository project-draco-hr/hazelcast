{
  final StringBuffer sb=new StringBuffer();
  sb.append(first);
  sb.append(" IN (");
  if (inValueArray != null) {
    for (int i=0; i < inValueArray.length; i++) {
      sb.append(inValueArray[i]);
      if (i < (inValueArray.length - 1)) {
        sb.append(",");
      }
    }
  }
 else {
    Iterator it=inValues.iterator();
    while (it.hasNext()) {
      sb.append(it.next());
      if (it.hasNext()) {
        sb.append(",");
      }
    }
  }
  sb.append(")");
  return sb.toString();
}
