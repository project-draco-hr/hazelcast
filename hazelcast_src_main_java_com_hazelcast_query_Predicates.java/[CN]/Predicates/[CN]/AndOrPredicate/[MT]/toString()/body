{
  final StringBuffer sb=new StringBuffer();
  sb.append("(");
  String andOr=(and) ? " AND " : " OR ";
  int size=predicates.length;
  for (int i=0; i < size; i++) {
    sb.append(predicates[i]);
    if (i < size - 1) {
      sb.append(andOr);
    }
  }
  sb.append(")");
  return sb.toString();
}
