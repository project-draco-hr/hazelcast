{
  if (node.isMaster()) {
    long now=System.currentTimeMillis();
    if (lastRun == 0) {
      lastRun=now + 5000;
    }
    if (!inProgress && (now - lastRun > 3000)) {
      inProgress=true;
      node.executorManager.executeLocally(new Runnable(){
        public void run(){
          searchForOtherClusters();
          lastRun=System.currentTimeMillis();
          inProgress=false;
        }
      }
);
    }
  }
}
