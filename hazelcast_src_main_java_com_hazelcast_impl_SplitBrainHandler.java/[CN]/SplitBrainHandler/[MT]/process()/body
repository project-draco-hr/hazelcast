{
  if (node.isMaster() && node.joined() && node.isActive()) {
    if (!inProgress && node.clusterManager.shouldTryMerge()) {
      inProgress=true;
      node.executorManager.executeNow(new FallThroughRunnable(){
        @Override public void doRun(){
          searchForOtherClusters();
          inProgress=false;
        }
      }
);
    }
  }
}
