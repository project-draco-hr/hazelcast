{
  Config cfg=new Config();
  cfg.setGroupConfig(new GroupConfig(MapStoreEvictionTest.class.getSimpleName()));
  MapStoreConfig mapStoreConfig=new MapStoreConfig().setEnabled(true).setImplementation(new SimpleMapLoader(size,false)).setInitialLoadMode(MapStoreConfig.InitialLoadMode.EAGER);
  MaxSizeConfig maxSizeConfig=new MaxSizeConfig(maxSize,MaxSizeConfig.MaxSizePolicy.PER_NODE);
  cfg.getMapConfig(mapName).setMapStoreConfig(mapStoreConfig).setMaxSizeConfig(maxSizeConfig).setEvictionPercentage(10).setEvictionPolicy(MapConfig.EvictionPolicy.LRU).setMergePolicy(LatestUpdateMapMergePolicy.class.getName());
  return cfg;
}
