{
  String s=properties.getString(PERFORMANCE_MONITOR_ENABLED);
  if (s != null) {
    return properties.getBoolean(PERFORMANCE_MONITOR_ENABLED);
  }
  s=properties.get("hazelcast.performance.monitoring.enabled");
  if (s != null) {
    logger.warning("Don't use deprecated 'hazelcast.performance.monitoring.enabled' " + "but use '" + PERFORMANCE_MONITOR_ENABLED.getName() + "' instead. "+ "The former name will be removed in Hazelcast 3.8.");
  }
  return Boolean.parseBoolean(s);
}
