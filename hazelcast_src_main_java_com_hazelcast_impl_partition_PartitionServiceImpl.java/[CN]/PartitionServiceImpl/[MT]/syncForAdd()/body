{
  if (node.isMaster() && node.isActive()) {
    if (sendingDiffs.get()) {
      logger.log(Level.INFO,"MigrationService is already sending diffs for dead member, " + "no need to initiate task!");
    }
 else {
      clearTaskQueues();
      immediateTasksQueue.offer(new PrepareRepartitioningTask());
    }
  }
}
