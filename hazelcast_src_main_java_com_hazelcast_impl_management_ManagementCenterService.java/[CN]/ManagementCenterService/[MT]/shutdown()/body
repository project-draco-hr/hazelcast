{
  if (!running)   return;
  logger.log(Level.INFO,"Shutting down Hazelcast Management Center");
  running=false;
  try {
    datagramSocket.close();
    serverSocket.close();
    for (    ClientHandler clientHandler : lsClientHandlers) {
      clientHandler.shutdown();
    }
    udpSender.interrupt();
    lsClientHandlers.clear();
  }
 catch (  Throwable ignored) {
  }
}
