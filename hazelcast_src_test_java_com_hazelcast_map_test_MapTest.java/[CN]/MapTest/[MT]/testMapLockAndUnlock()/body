{
  final IMap<Object,Object> map=getInstance().getMap("testMapLockAndUnlock");
  map.lock("key1");
  map.lock("key2");
  map.lock("key3");
  final CountDownLatch latch=new CountDownLatch(3);
  Thread thread=new Thread(new Runnable(){
    public void run(){
      try {
        map.put("key1","value1");
        latch.countDown();
        map.put("key2","value2");
        latch.countDown();
        map.put("key3","value3");
        latch.countDown();
      }
 catch (      Exception e) {
        fail(e.getMessage());
      }
    }
  }
);
  thread.start();
  Thread.sleep(1000);
  assertEquals(3,latch.getCount());
  map.unlock("key1");
  Thread.sleep(1000);
  assertEquals(2,latch.getCount());
  map.unlock("key2");
  Thread.sleep(1000);
  assertEquals(1,latch.getCount());
  map.unlock("key3");
  assertTrue(latch.await(3,TimeUnit.SECONDS));
}
