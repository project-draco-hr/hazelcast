{
  if (context.getOperationType().equals(MapOperationType.GET)) {
    if (context.getNewValue() != null)     return context.getNewValue() + ":";
 else     return null;
  }
  if (context.getOperationType().equals(MapOperationType.PUT))   return ((String)context.getNewValue()).toUpperCase();
  if (context.getOperationType().equals(MapOperationType.REMOVE)) {
    if (context.getExistingEntry().getValue().equals("ISTANBUL"))     throw new RuntimeException("you can not remove this");
    return context.getExistingEntry().getValue();
  }
  return context.getNewValue();
}
