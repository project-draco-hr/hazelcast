{
  Invocation inv=new TargetInvocation(invocation.operationService,isStillRunningOperation,invocation.getTarget(),0,0,IS_EXECUTING_CALL_TIMEOUT,true);
  invocation.logger.warning("Asking if operation execution has been started: " + invocation);
  inv.invoke();
  if (callback != null) {
    inv.future.andThen(callback);
  }
}
