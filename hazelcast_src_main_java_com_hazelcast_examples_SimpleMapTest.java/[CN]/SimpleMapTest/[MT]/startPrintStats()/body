{
  new Thread(){
{
      setDaemon(true);
      setName("PrintStats." + instance.getName());
    }
    public void run(){
      final IMap<String,Object> map=instance.getMap(NAMESPACE);
      while (true) {
        try {
          Thread.sleep(STATS_SECONDS * 1000);
          stats.printAndReset();
          final LocalMapStats localMapStats=map.getLocalMapStats();
          logger.log(Level.INFO,"Owned-Entries= " + localMapStats.getOwnedEntryCount() + ", Backup-Entries:"+ localMapStats.getBackupEntryCount()+ '\n');
        }
 catch (        InterruptedException ignored) {
          return;
        }
      }
    }
  }
.start();
}
