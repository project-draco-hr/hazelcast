{
  if (listeners.size() > 0) {
    nodeService.getEventService().execute(new Runnable(){
      public void run(){
        MembershipEvent membershipEvent=new MembershipEvent(getClusterProxy(),member,(added ? MembershipEvent.MEMBER_ADDED : MembershipEvent.MEMBER_REMOVED));
        for (        MembershipListener listener : listeners) {
          if (added) {
            listener.memberAdded(membershipEvent);
          }
 else {
            listener.memberRemoved(membershipEvent);
          }
        }
      }
    }
);
  }
}
