{
  if (average <= 10) {
    return;
  }
  final float r=replica == 0 ? 1.2f : 1.5f;
  Assert.assertTrue("Too low partition count! \nOwned: " + count + ", Avg: "+ average+ ", \nPartitionCount: "+ partitionCount+ ", Replica: "+ replica+ ", \nOwner: "+ owner+ ", \nGroups: "+ groups,count >= (float)(average) / r);
  Assert.assertTrue("Too high partition count! \nOwned: " + count + ", Avg: "+ average+ ", \nPartitionCount: "+ partitionCount+ ", Replica: "+ replica+ ", \nOwner: "+ owner+ ", \nGroups: "+ groups,count <= (float)(average) * r);
}
