{
  if (b == null) {
    throw new NullPointerException();
  }
 else   if ((off < 0) || (off > b.length) || (len < 0)|| ((off + len) > b.length)|| ((off + len) < 0)) {
    throw new IndexOutOfBoundsException();
  }
  if (position >= size) {
    return -1;
  }
  if (position + len > size) {
    len=size - position;
  }
  if (len <= 0) {
    return 0;
  }
  System.arraycopy(buffer,offset + position,b,off,len);
  return len;
}
