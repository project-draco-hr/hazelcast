{
  try {
    if (state != ACTIVE) {
      throw new TransactionNotActiveException("Transaction is not active");
    }
    checkThread();
    checkTimeout();
    sendAndReceive(new PrepareTransactionRequest((int)threadId));
    state=PREPARED;
  }
 catch (  Exception e) {
    state=ROLLING_BACK;
    closeConnection();
    throw ExceptionUtil.rethrow(e);
  }
}
