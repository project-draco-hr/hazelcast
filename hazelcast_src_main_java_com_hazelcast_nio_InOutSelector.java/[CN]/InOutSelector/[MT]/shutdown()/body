{
  selectorQueue.clear();
  try {
    final CountDownLatch l=new CountDownLatch(1);
    addTask(new Runnable(){
      public void run(){
        live=false;
        threadLocalShutdown();
        l.countDown();
      }
    }
);
    l.await(5,TimeUnit.SECONDS);
  }
 catch (  InterruptedException ignored) {
  }
}
