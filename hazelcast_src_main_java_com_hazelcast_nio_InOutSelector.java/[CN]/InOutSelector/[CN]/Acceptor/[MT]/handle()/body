{
  try {
    final SocketChannelWrapper channel=connectionManager.wrapSocketChannel(serverSocketChannel.accept(),false);
    logger.log(Level.INFO,channel.socket().getLocalPort() + " is accepting socket connection from " + channel.socket().getRemoteSocketAddress());
    initSocket(channel.socket());
    channel.configureBlocking(false);
    connectionManager.assignSocketChannel(channel);
  }
 catch (  final Exception e) {
    logger.log(Level.FINEST,e.getMessage(),e);
    try {
      serverSocketChannel.close();
    }
 catch (    final Exception ignore) {
    }
    connectionManager.ioService.onFatalError(e);
  }
}
