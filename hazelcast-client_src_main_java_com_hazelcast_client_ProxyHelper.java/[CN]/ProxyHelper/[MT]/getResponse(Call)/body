{
  final int timeout=5;
  for (int i=0; ; i++) {
    final Object response=getResponse(c,timeout,TimeUnit.SECONDS);
    if (i > 0) {
      logger.log(Level.INFO,"There is no response for " + c + " in "+ (timeout * i)+ " seconds.");
    }
    if (response != null) {
      return response;
    }
  }
}
