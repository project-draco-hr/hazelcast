{
  if (isShutdown()) {
    throw new RejectedExecutionException(getRejectionMessage());
  }
  final NodeEngine nodeEngine=getNodeEngine();
  nodeEngine.getOperationService().createInvocationBuilder(DistributedExecutorService.SERVICE_NAME,new CallableTaskOperation(name,null,task),partitionId).setCallback(new ExecutionCallbackAdapter(callback)).invoke();
}
