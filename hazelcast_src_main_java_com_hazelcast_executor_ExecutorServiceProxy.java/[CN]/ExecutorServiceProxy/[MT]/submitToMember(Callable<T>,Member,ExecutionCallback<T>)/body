{
  if (isShutdown()) {
    throw new RejectedExecutionException(getRejectionMessage());
  }
  final NodeEngine nodeEngine=getNodeEngine();
  Invocation inv=nodeEngine.getOperationService().createInvocationBuilder(DistributedExecutorService.SERVICE_NAME,new MemberCallableTaskOperation(name,null,task),((MemberImpl)member).getAddress()).setCallback(new ExecutionCallbackAdapter(callback)).build();
  inv.invoke();
}
