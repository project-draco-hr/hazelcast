{
  if (isShutdown()) {
    throw new RejectedExecutionException(getRejectionMessage());
  }
  final NodeEngine nodeEngine=getNodeEngine();
  MemberCallableTaskOperation op=new MemberCallableTaskOperation(name,null,task);
  nodeEngine.getOperationService().createInvocationBuilder(DistributedExecutorService.SERVICE_NAME,op,((MemberImpl)member).getAddress()).setCallback(new ExecutionCallbackAdapter(callback)).invoke();
}
