{
  final NodeEngine nodeEngine=getNodeEngine();
  final Collection<MemberImpl> members=nodeEngine.getClusterService().getMemberList();
  final OperationService operationService=nodeEngine.getOperationService();
  final Collection<Future> calls=new LinkedList<Future>();
  for (  MemberImpl member : members) {
    if (member.localMember()) {
      final ShutdownOperation op=new ShutdownOperation(name);
      op.setServiceName(getServiceName()).setNodeEngine(nodeEngine).setResponseHandler(ResponseHandlerFactory.createEmptyResponseHandler());
      operationService.runOperation(op);
    }
 else {
      Future f=operationService.createInvocationBuilder(getServiceName(),new ShutdownOperation(name),member.getAddress()).build().invoke();
      calls.add(f);
    }
  }
  for (  Future f : calls) {
    try {
      f.get(1,TimeUnit.SECONDS);
    }
 catch (    Exception ignored) {
    }
  }
}
