{
  checkTTL();
  if (lockCount == 0) {
    this.owner=owner;
    this.threadId=threadId;
    lockCount++;
    acquireTime=Clock.currentTimeMillis();
    expirationTime=Clock.currentTimeMillis() + ttl;
    return true;
  }
 else   if (isLockedBy(owner,threadId)) {
    lockCount++;
    expirationTime=Clock.currentTimeMillis() + ttl;
    return true;
  }
  return false;
}
