{
  checkTTL();
  if (lockCount == 0) {
    lockOwner=owner;
    lockThreadId=threadId;
    lockCount++;
    lockAcquireTime=Clock.currentTimeMillis();
    expirationTime=System.currentTimeMillis() + ttl;
    return true;
  }
 else   if (isLockedBy(owner,threadId)) {
    lockCount++;
    expirationTime=System.currentTimeMillis() + ttl;
    return true;
  }
  return false;
}
