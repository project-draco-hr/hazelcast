{
  StringBuilder sizeString=new StringBuilder();
  if (isNullable) {
    sizeString.append("dataSize += Bits.BOOLEAN_SIZE_IN_BYTES;\n");
    sizeString.append("        if (" + name + " != null) {\n");
    sizeString.append(innerString);
    sizeString.append("        }\n");
    return sizeString.toString();
  }
 else {
    return innerString;
  }
}
