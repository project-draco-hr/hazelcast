{
  final int maxCapacityPerNode=100;
  final MapStoreWithCounter mapStore=new MapStoreWithCounter<Integer,String>();
  final TestMapUsingMapStoreBuilder builder=TestMapUsingMapStoreBuilder.create().withMapStore(mapStore).withNodeCount(1).withNodeFactory(createHazelcastInstanceFactory(1)).withBackupCount(0).withWriteDelaySeconds(100).withWriteCoalescing(false).withWriteBehindQueueCapacity(maxCapacityPerNode);
  final IMap<Object,Object> map=builder.build();
  populateMap(map,maxCapacityPerNode);
  assertEquals(maxCapacityPerNode,map.size());
}
