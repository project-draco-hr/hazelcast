{
  final InetAddress[] inetAddresses=InetAddress.getAllByName(domainName);
  if (inetAddresses.length > 1) {
    logger.log(Level.WARNING,"Domain name '" + domainName + "' resolves to more than one address: "+ Arrays.toString(inetAddresses)+ "! Hazelcast will use the first one.");
  }
  final InetAddress inetAddress=inetAddresses[0];
  return inetAddress.getHostAddress();
}
